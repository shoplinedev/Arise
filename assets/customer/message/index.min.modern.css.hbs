.customer-message-input{
  border:1px solid {{ theme.settings.color_entry_line }};
  padding:16px;
}
.customer-message-input,.customer-message-input .msg-input-area{
  background-color:{{ theme.settings.color_page_background }};
  box-sizing:border-box;
}
.customer-message-input .msg-input-area{
  border:none;
  color:{{ theme.settings.color_text }};
  font-size:14px;
  height:90px;
  margin-bottom:12px;
  resize:none;
  width:100%;
}
.customer-message-input .msg-input-area::placeholder{
  color:{{ rgba  theme.settings.color_text  0.6 }};
}
.customer-message-input .msg-input-control{
  align-items:end;
  display:flex;
  justify-content:space-between;
}
.customer-message-input .msg-input-control .msg-input-send{
  cursor:pointer;
  font-size:16px;
  font-weight:700;
}
.customer-message-input .msg-input-control .msg-input-upload__preview{
  background-position:50%;
  background-size:cover;
  display:none;
  height:72px;
  position:relative;
  width:72px;
}
.customer-message-input .msg-input-control .msg-input-upload__preview--close{
  cursor:pointer;
  display:flex;
  height:20px;
  position:absolute;
  right:-10px;
  top:-10px;
  width:20px;
}

.customer-message-preview-modal{
  bottom:0;
  display:none;
  height:100%;
  left:0;
  opacity:0;
  position:fixed;
  right:0;
  top:0;
  transition:all .3s;
  z-index:1000;
}
.customer-message-preview-modal-mask{
  background-color:rgba(0,0,0,.8);
  bottom:0;
  left:0;
  position:absolute;
  right:0;
  top:0;
}
.customer-message-preview-modal-content{
  align-items:center;
  bottom:0;
  display:flex;
  justify-content:center;
  left:0;
  position:absolute;
  right:0;
  top:0;
}
.customer-message-preview-modal-wrap{
  align-items:center;
  box-sizing:border-box;
  display:flex;
  justify-content:center;
  max-height:100%;
  max-width:100%;
  padding:48px;
  position:relative;
}
@media (max-width:767.98px){
  .customer-message-preview-modal-wrap{
    height:100%;
    padding:0;
    width:100%;
  }
}
.customer-message-preview-modal-wrap svg{
  cursor:pointer;
  position:absolute;
  right:0;
  top:0;
}
@media (max-width:767.98px){
  .customer-message-preview-modal-wrap svg{
    right:16px;
    top:16px;
  }
}
.customer-message-preview-modal-wrap img{
  max-width:100%;
  opacity:0;
  transform:scale(.3);
  transition:all .2s;
}
.customer-message-preview-modal.fade-in{
  opacity:1;
}
.customer-message-preview-modal.fade-in .customer-message-preview-modal-wrap img{
  opacity:1;
  transform:scale(1);
}
