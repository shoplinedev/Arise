.mp-modal__wrapper .mp-modal__popup.mp-modal__notVisibleAnimation .mp-modal__container{
  -webkit-animation:.5s mp-modal-slideOutBottom forwards ease;
          animation:.5s mp-modal-slideOutBottom forwards ease;
}
