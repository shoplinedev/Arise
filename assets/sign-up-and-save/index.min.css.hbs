input{
  -webkit-appearance:none;
}
.stage-newsletter .color-scheme-none .sl-richtext a:after{
  background-color:{{ theme.settings.color_text }};
}

.newsletter{
  -webkit-box-align:center;
  -webkit-box-pack:center;
  -webkit-box-orient:vertical;
  -webkit-box-direction:normal;
  -webkit-align-items:center;
          align-items:center;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-flex-direction:column;
          flex-direction:column;
  -webkit-justify-content:center;
          justify-content:center;
  position:relative;
  z-index:3;
}
.newsletter__title h2{
  text-align:center !important;
}
.newsletter__desc{
  margin-top:15px;
  text-align:center;
}
.newsletter__btnGroup{
  -webkit-box-align:stretch;
  -webkit-align-items:stretch;
          align-items:stretch;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  margin-top:15px;
}
@media (max-width:749.98px){
  .newsletter__btnGroup{
    padding-left:var(--sl-gutter-x, .75rem);
    padding-right:var(--sl-gutter-x, .75rem);
  }
}
.newsletter__input--wrapper{
  background-color:{{ theme.settings.color_page_background }};
  color:{{ theme.settings.color_text }};
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  height:auto;
  margin-right:10px;
  outline:none;
  width:100%;
  width:260px;
}
.newsletter__input--wrapper::-webkit-input-placeholder{
  color:currentColor;
}
.newsletter__input--wrapper::placeholder{
  color:currentColor;
}
.color-scheme-1 .newsletter__input--wrapper:after{
  box-shadow:0 0 0 {{ append theme.settings.input_border_thickness 'px' }} {{ rgba theme.settings.color_scheme_1_text (divide theme.settings.input_border_opacity 100) }};
}

.color-scheme-2 .newsletter__input--wrapper:after{
  box-shadow:0 0 0 {{ append theme.settings.input_border_thickness 'px' }} {{ rgba theme.settings.color_scheme_2_text (divide theme.settings.input_border_opacity 100) }};
}

.color-scheme-3 .newsletter__input--wrapper:after{
  box-shadow:0 0 0 {{ append theme.settings.input_border_thickness 'px' }} {{ rgba theme.settings.color_scheme_3_text (divide theme.settings.input_border_opacity 100) }};
}

.newsletter__input--wrapper{
  border-radius:{{ append (cond (lte theme.settings.input_border_radius 0) 0 (add theme.settings.input_border_radius theme.settings.input_border_thickness))  'px' }};
  position:relative;
}
.newsletter__input--wrapper:before{
  border-radius:{{ append (cond (lte theme.settings.input_border_radius 0) 0 (add theme.settings.input_border_radius theme.settings.input_border_thickness))  'px' }};
  bottom:0;
  box-shadow:{{ append theme.settings.input_shadow_offset_x 'px' }} {{ append theme.settings.input_shadow_offset_y 'px' }} {{ append theme.settings.input_shadow_blur 'px' }} {{ rgba theme.settings.color_text (divide theme.settings.input_shadow_opacity 100) }};
  content:"";
  left:0;
  pointer-events:none;
  position:absolute;
  right:0;
  top:0;
}
.newsletter__input--wrapper:after{
  border-radius:{{ append theme.settings.input_border_radius 'px' }};
  bottom:{{ append theme.settings.input_border_thickness 'px' }};
  box-shadow:0 0 0 {{ append theme.settings.input_border_thickness 'px' }} {{ rgba theme.settings.color_text (divide theme.settings.input_border_opacity 100) }};
  content:"";
  left:{{ append theme.settings.input_border_thickness 'px' }};
  pointer-events:none;
  position:absolute;
  right:{{ append theme.settings.input_border_thickness 'px' }};
  top:{{ append theme.settings.input_border_thickness 'px' }};
  z-index:1;
}
.newsletter__input{
  border:initial;
  border-radius:{{ append (cond (lte theme.settings.input_border_radius 0) 0 (add theme.settings.input_border_radius theme.settings.input_border_thickness))  'px' }};
  height:100%;
  padding:{{ append (add theme.settings.input_border_thickness 15.7) 'px' }} {{ append (add theme.settings.input_border_thickness 12) 'px' }};
  width:100%;
}
.newsletter__btn{
  -webkit-box-align:center;
  -webkit-box-pack:center;
  -webkit-align-items:center;
          align-items:center;
  cursor:pointer;
  display:-webkit-box !important;
  display:-webkit-flex !important;
  display:flex !important;
  height:auto;
  -webkit-justify-content:center;
          justify-content:center;
  line-height:1em;
  min-width:90px;
}
.newsletter__btn svg{
  stroke:currentColor;
}

.newsletter__btn span{
  display:inline-block;
}
.newsletter__btn.has-icon span,.newsletter__btn svg{
  display:none;
}
.newsletter__btn.has-icon svg{
  display:inline-block;
}
@media (max-width:749.98px){
  .newsletter__btn span{
    display:none;
  }
  .newsletter__btn svg{
    display:inline-block;
  }
  .newsletter__btnGroup,.newsletter__input{
    width:100%;
  }
  .newsletter__btn{
    width:90px;
  }
}
