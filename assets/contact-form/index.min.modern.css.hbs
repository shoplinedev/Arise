.base-input{
  border-radius:{{ append (cond (lte theme.settings.input_border_radius 0) 0 (add theme.settings.input_border_radius theme.settings.input_border_thickness))  'px' }};
  position:relative;
}
.base-input:before{
  border-radius:{{ append (cond (lte theme.settings.input_border_radius 0) 0 (add theme.settings.input_border_radius theme.settings.input_border_thickness))  'px' }};
  bottom:0;
  box-shadow:{{ append theme.settings.input_shadow_offset_x 'px' }} {{ append theme.settings.input_shadow_offset_y 'px' }} {{ append theme.settings.input_shadow_blur 'px' }} {{ rgba theme.settings.color_text (divide theme.settings.input_shadow_opacity 100) }};
  left:0;
  right:0;
  top:0;
}
.base-input:after,.base-input:before{
  content:"";
  pointer-events:none;
  position:absolute;
}
.base-input:after{
  border-radius:{{ append theme.settings.input_border_radius 'px' }};
  bottom:{{ append theme.settings.input_border_thickness 'px' }};
  box-shadow:0 0 0 {{ append theme.settings.input_border_thickness 'px' }} {{ rgba theme.settings.color_text (divide theme.settings.input_border_opacity 100) }}, 0 0 0 {{ append theme.settings.input_border_thickness 'px' }} var(--btn-border-background-color);
  left:{{ append theme.settings.input_border_thickness 'px' }};
  right:{{ append theme.settings.input_border_thickness 'px' }};
  top:{{ append theme.settings.input_border_thickness 'px' }};
  transition:box-shadow .1s ease;
  z-index:1;
}
.base-input:hover:after{
  box-shadow:0 0 0 {{ append (add theme.settings.input_border_thickness 1) 'px' }} {{ rgba theme.settings.color_text (divide theme.settings.input_border_opacity 100) }}, 0 0 0 {{ append (add theme.settings.input_border_thickness 1) 'px' }} var(--btn-border-background-color);
}

.base-input-area.is-textarea .base-input__inpEle:not(:placeholder-shown)+.placeholder,.base-input:focus-within .placeholder,.base-input__inpEle:not(:placeholder-shown)+.placeholder,.base-input__selectEle:not(:placeholder-shown)+.placeholder{
  transform:scale(.8) translateY(-100%);
  white-space:nowrap;
  word-break:normal;
}

.base-input input:focus,.base-input textarea:focus{
  outline:0;
}

.base-input:focus-within:after,.base-input:focus:after{
  box-shadow:0 0 0 {{append (add 1 theme.settings.input_border_thickness) 'px'}} {{ rgba theme.settings.color_text (divide theme.settings.input_border_opacity 100) }};
}
.color-scheme-1 .base-input:focus-within:after,.color-scheme-1 .base-input:focus:after{
  box-shadow:0 0 0 {{append (add 1 theme.settings.input_border_thickness) 'px'}} {{ rgba theme.settings.color_scheme_1_text (divide theme.settings.input_border_opacity 100) }};
}

.color-scheme-2 .base-input:focus-within:after,.color-scheme-2 .base-input:focus:after{
  box-shadow:0 0 0 {{append (add 1 theme.settings.input_border_thickness) 'px'}} {{ rgba theme.settings.color_scheme_2_text (divide theme.settings.input_border_opacity 100) }};
}

.color-scheme-3 .base-input:focus-within:after,.color-scheme-3 .base-input:focus:after{
  box-shadow:0 0 0 {{append (add 1 theme.settings.input_border_thickness) 'px'}} {{ rgba theme.settings.color_scheme_3_text (divide theme.settings.input_border_opacity 100) }};
