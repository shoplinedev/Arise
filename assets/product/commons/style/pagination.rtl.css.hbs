.pagination>span.pagination_next,.pagination>span.pagination_pre,.pagination_scope_item{
  border-radius:100%;
  padding:0;
}

.pagination{
  align-items:center;
  border:1px solid rgb(var(--color-entry-line));
  border-radius:4px;
  display:flex;
  justify-content:center;
  margin:20px auto 0;
  padding:8px 10px;
  width:max-content;
}
.pagination.hide{
  display:none;
}
.pagination>span{
  cursor:pointer;
  display:block;
  padding:0 13px;
  user-select:none;
}
.pagination>span.pagination_pre{
  margin-left:5px;
  order:1;
}
.pagination>span.pagination_next{
  margin-right:5px;
  order:3;
}
.pagination>span.pagination-disabled{
  opacity:.5;
}
.pagination>span>a{
  height:100%;
  text-decoration:none;
  width:100%;
}
.pagination>span .pagination_icon_arrow_color,.pagination>span>a{
  align-items:center;
  display:flex;
  justify-content:center;
}
.pagination .pagination__num--container{
  order:2;
}

.pagination-info{
  color:var(--color-entry-line, #000);
  margin-top:12px;
  text-align:center;
}