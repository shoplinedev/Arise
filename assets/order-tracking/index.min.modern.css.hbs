.captcha-modal-container{
  background-color:transparent !important;
}

.captcha-modal-body{
  padding:0 !important;
}
@media only screen and (max-width:750px){
  .captcha-modal-body .captcha-content{
    left:50%;
    position:absolute;
    top:50%;
    transform:translate(-50%, -50%);
  }
}

.captcha-transparent{
  background-color:transparent !important;
}
input{
  -webkit-appearance:none;
}
.order-tracking__container{
  padding:0 20px;
}
.order-tracking__order-box{
  margin:0 auto;
  width:430px;
}
@media (max-width:749.98px){
  .order-tracking__order-box{
    width:100%;
  }
}
.order-tracking__order-box .sl-input__suffix{
  margin-right:0;
  padding:0;
}
.order-tracking__title{
  text-align:center;
}
.order-tracking__form-item{
  margin-top:50px;
}
.order-tracking__submit-btn .btn{
  width:100%;
}
.order-tracking__change-btn{
  margin-top:8px;
  text-align:center;
}
.order-tracking__send-btn.disabled{
  cursor:not-allowed;
  opacity:.3;
}
